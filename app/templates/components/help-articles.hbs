{{#if articles.articles}}
  <div class="panel-heading">
    <h3 class="panel-title">{{t 'help-articles.title'}}</h3>
  </div>

  <ul class="list-group">
    {{#each articles.articles as |article|}}
      <li class="list-group-item">
        <a href="{{article.html_url}}" target="_blank">
          {{article.title}}
        </a>
      </li>
    {{/each}}
  </ul>
{{/if}}
