<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      {{t 'memberships.new.options'}}
    </h3>
  </div>
  <div class="panel-body">
    {{#if membership.isWwoofer}}
      <div class="alert alert-warning" role="alert">
        {{t 'memberships.new.franceOnly'}}
        {{t 'memberships.new.otherCountries'}}
      </div>
    {{/if}}
    <div class="form-group">
      <label class="col-sm-2 control-label">
        {{t 'memberships.new.itemCode.label'}}
      </label>

      <div class="col-sm-10">
        {{#each membershipOptions as |membershipOption|}}
          <div class="radio">
            {{#radio-button value=membershipOption.id groupValue=membership.itemCode changed=itemCodeChanged}}
              {{membershipOption.name}}
            {{/radio-button}}
          </div>
        {{/each}}
      </div>
    </div>
    <div class="col-sm-offset-2 col-sm-10">
      <p class="form-details mbm">
        {{t 'memberships.new.itemCode.details'}}
      </p>
    </div>
    {{#if membership.hasBooklet}}
      <div class="form-group">
        <label for="shippingRegions" class="col-sm-2 control-label">
          {{t 'memberships.new.shipping.label'}}
        </label>

        <div class="col-sm-10">
          {{#each shippingRegionOptions as |shippingRegionOption|}}
            <div class="radio">
              {{#radio-button value=shippingRegionOption.id groupValue=shippingRegion}}
                {{shippingRegionOption.name}}
              {{/radio-button}}
            </div>
          {{/each}}
        </div>
      </div>
      <div class="col-sm-offset-2 col-sm-10">
        <p class="form-details mbm">
          {{t 'memberships.new.shipping.details'}}
        </p>
      </div>
    {{/if}}
    {{#if isAdminMode}}
      <div class="form-group">
        <label for="shippingRegions" class="col-sm-2 control-label">
          {{t 'memberships.new.paymentType.label'}}
        </label>

        <div class="col-sm-10">
          {{#power-select
              selected=paymentType
              options=paymentTypeOptions
              searchField='name'
              placeholder=(t 'memberships.new.paymentType.prompt')
              allowClear=true
              onchange=paymentTypeDidChange
              disabled=isFree
          as |paymentType|}}
            {{paymentType.name}}
          {{/power-select}}
          <div class="checkbox">
            <label>
              <input type="checkbox" checked={{isFree}} onclick={{toggleIsFree}} />
              {{t 'memberships.new.isFree.label'}}
            </label>
          </div>
        </div>
      </div>
    {{/if}}
    <div class="form-group mbx">
      <label class="col-sm-2 control-label">{{t 'memberships.new.total'}}</label>

      <div class="col-sm-10">
        <p class="form-control-static">{{total}} Euros</p>
      </div>
    </div>
  </div>
</div>
{{#if membership.isDuo}}
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">{{t 'memberships.new.otherWwoofer'}}</h3>
    </div>
    <div class="panel-body">
      {{#forms/form-group valuePath='membership.firstName2' validations=validations as |showError|}}
        <label for="firstName2" class="col-sm-2 control-label">{{t 'user.form.firstName.label'}}</label>

        <div class="col-sm-10">
          {{input id='firstName2' type='text' name='firstName2' value=membership.firstName2 class='form-control'}}
          {{error-display error=validations.attrs.membership.firstName2 showError=showError}}
        </div>
      {{/forms/form-group}}
      {{#forms/form-group valuePath='membership.lastName2' validations=validations as |showError|}}
        <label for="lastName2" class="col-sm-2 control-label">{{t 'user.form.lastName.label'}}</label>

        <div class="col-sm-10">
          {{input id='lastName2' type='text' name='lastName2' value=membership.lastName2 class='form-control'}}
          {{error-display error=validations.attrs.membership.lastName2 showError=showError}}
        </div>
      {{/forms/form-group}}
      {{#forms/form-group valuePath='membership.birthDate2' validations=validations as |showError|}}
        <label for="birthDate2" class="col-sm-2 control-label">{{t 'user.form.birthDate.label'}}</label>

        <div class="col-sm-10">
          {{date-picker selectedDate=selectedDate dateSelected=dateSelected}}
          {{error-display error=validations.attrs.membership.birthDate2 showError=showError}}
        </div>
      {{/forms/form-group}}
    </div>
  </div>
{{/if}}
