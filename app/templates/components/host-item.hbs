{{#link-to 'host' host.id title=host.displayedFarmName}}
  <img src={{host.displayedThumbnail.urlMedium}} />
  {{#if host.isRecent}}
    <span class="label label-primary">{{t 'literal.new'}}</span>
  {{/if}}
{{/link-to}}

{{#if isFavorite}}
  <span class="glyphicon glyphicon-larger glyphicon-heart text-primary" title={{t 'common.removeFavorite'}} {{action 'remove' host}}></span>
{{else}}
  <span class="glyphicon glyphicon-larger glyphicon-heart-empty text-primary" title={{t 'common.addFavorite'}} {{action 'add' host}}></span>
{{/if}}

<div class="caption host-item-caption">
  <h3 class="overflow-ellipsis">{{host.displayedFarmName}}</h3>
  <p>{{truncate host.fullDescription limit=200}}</p>
</div>
