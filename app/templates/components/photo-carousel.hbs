<ol class="carousel-indicators">
  {{#each photos as |photo|}}
    <li data-target={{anchorId}} data-slide-to=""></li>
  {{/each}}
</ol>

<div class="carousel-inner" role="listbox">
  {{#each photos as |photo|}}
    <div class="item">
      <img src={{photo.urlLarge}} />
      <div class="carousel-caption">
        {{photo.caption}}
      </div>
    </div>
  {{else}}
    <div class="item">
      <img src={{noPhotoUrl}} />
      <div class="carousel-caption">
        {{t 'host.index.noPhotoCaption'}}
      </div>
    </div>
  {{/each}}
</div>

<a class="left carousel-control" href={{anchorId}} role="button" data-slide="prev">
  <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
  <span class="sr-only">Previous</span>
</a>
<a class="right carousel-control" href={{anchorId}} role="button" data-slide="next">
  <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
  <span class="sr-only">Next</span>
</a>
