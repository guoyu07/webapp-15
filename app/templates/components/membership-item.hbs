<td>{{input type="checkbox" checked=checked}}</td>
<td>{{membership.user.fullName}}</td>
<td>{{membership.itemCode}}</td>
<td>{{membership.paymentType}}</td>
<td>{{membership.total}} Euro</td>
<td>{{moment-format membership.createdAt 'll'}}</td>
<td class={{expireAtClass}}>{{moment-format membership.expireAt 'll'}}</td>
<td>
  {{#if membership.reminderSentAt}}
    <span class="glyphicon glyphicon-ok" title={{moment-format membership.reminderSentAt}}></span>
  {{else}}
    {{t 'literal.no'}}
  {{/if}}
</td>
<td>
  {{#if membership.hasBooklet}}
    {{#if membership.bookletSentAt}}
      <span class="glyphicon glyphicon-ok" title={{moment-format membership.bookletSentAt}}></span>
    {{else}}
      <span class="glyphicon glyphicon-send pointer" {{action 'markBookletAsSent' membership}} title={{t 'memberships.index.sendBooklet'}}></span>
    {{/if}}
  {{else}}
    {{t 'literal.notApplicable'}}
  {{/if}}
</td>
