<form class="form-horizontal">

  {{address-form
  address=address
  instructions=instructions
  countries=countries
  validations=validations
  countryDidChange=(action 'countryDidChange')
  departmentDidChange=(action 'departmentDidChange')}}

  {{host-contact-details
  validations=validations
  host=host}}

  <div class="form-group">
    <div class="col-xs-12">
      <button {{action 'saveAddress'}} disabled={{address.isSaving}} class="btn btn-primary {{if address.isNew 'pull-right'}}">
        {{#if address.isNew}}
          {{t 'literal.continue'}} <span class="glyphicon glyphicon-menu-right"></span>
        {{else}}
          {{t 'literal.save'}}
        {{/if}}
      </button>
    </div>
  </div>
</form>
