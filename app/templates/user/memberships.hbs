<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">{{t 'user.memberships.wwoofer'}}</h3>
  </div>
  <div class="panel-body">
    {{#if user.hasWwooferMemberships}}
      {{wwoofer-membership-status user=user}}
      <table class="table table-hover">
        <thead>
        <tr>
          <th>{{t 'user.memberships.code'}}</th>
          <th>{{t 'user.memberships.payment'}}</th>
          <th>{{t 'user.memberships.amount'}}</th>
          <th>{{t 'user.memberships.expireAt'}}</th>
        </tr>
        </thead>
        <tbody>
        {{#each user.wwooferMemberships as |wwooferMembership|}}
          <tr>
            <td>{{wwooferMembership.itemCode}}</td>
            <td>{{moment-format wwooferMembership.createdAt}}</td>
            <td>{{wwooferMembership.total}} Euro</td>
            <td>{{moment-format wwooferMembership.expireAt}}</td>
          </tr>
        {{/each}}
        </tbody>
      </table>
      <small>{{t 'user.memberships.renewalInstructions'}}</small>
    {{else}}
      {{t 'user.memberships.noWwooferMemberships'}}
      {{#if sessionUser.user.isNotAdmin}}
        {{#link-to 'become-wwoofer.intro'}}
          {{t 'user.memberships.becomeWwoofer'}}
        {{/link-to}}
      {{/if}}
    {{/if}}
    {{#if showCreateWwooferMembershipLink}}
      {{#link-to 'memberships.new' (query-params type='W' itemCode='WO1' userId=user.id)}}
        {{t 'user.memberships.create'}}
      {{/link-to}}
    {{/if}}
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">{{t 'user.memberships.host'}}</h3>
  </div>
  <div class="panel-body">
    {{#if user.hasHostMemberships}}
