      <table class="table table-hover">
        <thead>
        <tr>
          <th>{{t 'user.memberships.code'}}</th>
          <th>{{t 'user.memberships.payment'}}</th>
          <th>{{t 'user.memberships.amount'}}</th>
          <th>{{t 'user.memberships.expireAt'}}</th>
        </tr>
        </thead>
        <tbody>
        {{#each user.hostMemberships as |hostMembership|}}
          <tr>
            <td>{{hostMembership.itemCode}}</td>
            <td>{{moment-format hostMembership.createdAt}}</td>
            <td>{{hostMembership.total}} Euro</td>
            <td>{{moment-format hostMembership.expireAt}}</td>
