<div class="row">
  <div class="col-xs-12 col-sm-4 col-md-3">
    {{image-thumb src=user.conversationUrlThumb2}}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          {{t 'wwoofer.index.contact' firstName=user.firstName}}
        </h3>
      </div>
      <table class="table">
        <tbody>
        {{#if sessionUser.user.isAdmin}}
          <tr>
            <td>
              <span class="glyphicon glyphicon-envelope mrx"></span>
              {{mail-to user.email (truncate user.email limit=28)}}
            </td>
          </tr>
        {{/if}}
        {{#if user.phone}}
          <tr>
            <td>
              <span class="glyphicon glyphicon-earphone mrx"></span>
              {{user.phone}}
            </td>
          </tr>
        {{/if}}
        </tbody>
      </table>
      <ul class="list-group">
        {{#link-to 'conversations.new' (query-params user2Id=user.id) disabledWhen=sessionUser.user.hasNoActiveMembership class='list-group-item list-group-item-primary text-center'}}
          {{t 'wwoofer.index.sendMessage'}}
        {{/link-to}}
      </ul>
    </div>
  </div>

  <div class="col-xs-12 col-sm-8 col-md-9">
    <h1 class="mtn">
      <span class="capitalize">{{t 'user.index.hi' name=user.firstName}}</span>
    </h1>
    <p><strong>
      {{t 'user.index.from' city=user.addresses.firstObject.city country=user.addresses.firstObject.country.name}} &centerdot;
      {{#if user.hasMemberships}}
        {{t 'wwoofer.index.memberSince'}} {{moment-format user.firstMembership.createdAt 'MMMM YYYY'}}
      {{else}}
        {{t 'wwoofer.index.notAMember'}}
      {{/if}}
    </strong></p>
    {{#if showNote}}
      <div class="alert alert-info" role="alert">
        <strong>{{t 'wwoofer.index.note'}}</strong>: {{user.note}}
      </div>
    {{/if}}
    <div class="panel panel-default mtm">
      <div class="panel-heading">
        <h3 class="panel-title">
          {{t 'wwoofer-form.intro.label'}}
        </h3>
      </div>
      <div class="panel-body">
        {{#if user.wwoofer.intro}}
          {{convert-breaklines user.wwoofer.intro}}
        {{else}}
          <i>{{t 'wwoofer.index.informationNotProvided'}}</i>
        {{/if}}
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          {{t 'wwoofer-form.tripMotivation.label'}}
        </h3>
      </div>
      <div class="panel-body">
        {{#if user.wwoofer.tripMotivation}}
          {{convert-breaklines user.wwoofer.tripMotivation}}
        {{else}}
          <i>{{t 'wwoofer.index.informationNotProvided'}}</i>
        {{/if}}
      </div>
    </div>
  </div>
</div>
