<div class="row">
  <div class="hidden-xs hidden-sm col-md-3">
    {{image-thumb url=conversation.otherUser.conversationPhotoUrl height=200}}

    <h3 class="text-center">{{conversation.otherUser.firstName}}</h3>
    {{#if conversation.otherUser.host.id}}
      {{#link-to 'host.index' conversation.otherUser.host.id  class="btn btn-primary btn-block"}}
        Host Profile
      {{/link-to}}
    {{/if}}
    {{#if conversation.otherUser.wwoofer.id}}
      {{#link-to 'wwoofer.index' conversation.otherUser.wwoofer.id class="btn btn-primary btn-block"}}
        Wwoofer Profile
      {{/link-to}}
    {{/if}}

  </div>
  <div class="col-xs-12 col-md-9">
    {{#forms/form-group valuePath='host.fullDescription' validations=validations as |showError|}}
      {{textarea id='newMessage' name='newMessage'value=newMessage class='form-control' placeholder=(t 'host-form.fullDescription.placeholder') rows="7"}}
      {{error-display error=validations.attrs.host.fullDescription showError=showError}}
    {{/forms/form-group}}
    <p class="text-right">
      <button type="button" class="btn btn-default" onclick={{action 'sendMessage' conversation newMessage}}>Send</button>
    </p>
    <hr>
    {{#each conversation.sortedMessages as |message|}}
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="row">
            <div class="col-xs-4 col-md-2">
              {{image-thumb url=message.author.conversationPhotoUrl height=100}}
            </div>
            <div class="col-xs-8 col-md-10">
              {{message.text}}
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
